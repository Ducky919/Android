<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a6dfdfdf"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button

        android:id="@+id/google"
        android:paddingStart="10dp"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_above="@+id/facebook"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="@android:color/white"
        android:drawableStart="@drawable/google_icon"
        android:text="Sign in with Google"
        tools:ignore="RtlSymmetry" />
    <Button
        android:id="@+id/facebook"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/facebook_icon"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_above="@+id/twitter"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="#3b5998"
        android:text="Sign in with Facebook" />
    <Button
        android:id="@+id/twitter"
        android:drawableStart="@drawable/twitter_icon"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_above="@+id/email"
        android:background="#1DA1F2"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="Sign in with Twitter" />
    <Button
        android:id="@+id/email"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/gmail_icon"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_above="@+id/phone"
        android:background="#FF0000"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="Sign in with Email" />
    <Button
        android:id="@+id/phone"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/phone_icon"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#a4c639"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:text="Sign in with Phone"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="107dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/google"
        android:layout_marginBottom="150dp"
        android:layout_margin="100dp"
        android:src="@drawable/download"
        />
</RelativeLayout>